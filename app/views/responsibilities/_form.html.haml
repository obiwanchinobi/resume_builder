= form_for @responsibility do |f|
  -if @responsibility.errors.any?
    #error_explanation
      %h2= "#{pluralize(@responsibility.errors.count, "error")} prohibited this responsibility from being saved:"
      %ul
        - @responsibility.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :career
    = f.text_field :career
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :display_index
    = f.text_field :display_index
  .actions
    = f.submit 'Save'
