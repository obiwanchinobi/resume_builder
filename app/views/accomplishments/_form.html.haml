= form_for @accomplishment do |f|
  -if @accomplishment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@accomplishment.errors.count, "error")} prohibited this accomplishment from being saved:"
      %ul
        - @accomplishment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :career
    = f.text_field :career
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :display_index
    = f.text_field :display_index
  .actions
    = f.submit 'Save'
