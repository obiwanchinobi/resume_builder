= form_for @jobvert do |f|
  -if @jobvert.errors.any?
    #error_explanation
      %h2= "#{pluralize(@jobvert.errors.count, "error")} prohibited this jobvert from being saved:"
      %ul
        - @jobvert.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :position
    = f.text_field :position
  .field
    = f.label :company
    = f.text_field :company
  .field
    = f.label :website
    = f.text_field :website
  .field
    = f.label :found_on
    = f.text_field :found_on
  .actions
    = f.submit 'Save'
