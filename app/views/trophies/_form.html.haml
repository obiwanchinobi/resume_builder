= form_for @trophy do |f|
  -if @trophy.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trophy.errors.count, "error")} prohibited this trophy from being saved:"
      %ul
        - @trophy.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :achievement
    = f.text_field :achievement
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :achieved_on
    = f.text_field :achieved_on
  .field
    = f.label :display_index
    = f.text_field :display_index
  .actions
    = f.submit 'Save'
